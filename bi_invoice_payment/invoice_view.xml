<openerp>
<data>

<record id="invoice_form" model="ir.ui.view">
    <field name="name">bi_invoice_payment.invoice.form</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_form" />
    <field name="arch" type="xml">
        <field name="payment_ids" position="after">
            <group string="Payment statistics" colspan="2">
                <field name="payment_journal_id" />
                <field name="total_down_payment_company_currency" widget="monetary"
                    options="{'currency_field': 'company_currency_id'}" />
                <field name="date_final_payment" />
                <field name="payment_delay_days" />
                <field name="overdue_delay_days" />
            </group>
        </field>
    </field>
</record>

<record id="invoice_supplier_form" model="ir.ui.view">
    <field name="name">bi_invoice_payment.supplier.invoice.form</field>
    <field name="model">account.invoice</field>
    <field name="inherit_id" ref="account.invoice_supplier_form" />
    <field name="arch" type="xml">
        <field name="payment_ids" position="after">
            <group string="Payment statistics" colspan="2">
                <field name="payment_journal_id" />
                <field name="total_down_payment_company_currency" widget="monetary"
                    options="{'currency_field': 'company_currency_id'}" />
                <field name="date_final_payment" />
                <field name="payment_delay_days" />
                <field name="overdue_delay_days" />
            </group>
        </field>
    </field>
</record>


</data>
</openerp>
